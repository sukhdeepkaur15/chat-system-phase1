{
  "name": "chat-server",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "engines": { "node": ">=18.17.0" },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "start:peer": "peerjs --port 9000 --path /peerjs",
    "dev:all": "concurrently -k -n api,peer \"npm:dev\" \"npm:start:peer\"",
    "test": "set NODE_ENV=test&& set PORT=0&& mocha \"test/**/*.test.js\" --timeout 10000",
    "test:watch": "mocha \"test/**/*.test.js\" --watch",
    "coverage": "nyc npm test"
  },
  "dependencies": {
    "compression": "1.7.5",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-rate-limit": "7.4.0",
    "helmet": "7.1.0",
    "mongodb": "6.9.0",
    "multer": "1.4.5-lts.1",
    "peer": "1.0.0",
    "socket.io": "4.8.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "20.14.9",
    "chai": "4.4.1",
    "concurrently": "9.0.1",
    "mocha": "10.7.3",
    "nodemon": "3.1.7",
    "nyc": "17.0.0",
    "supertest": "7.0.0"
  }
}
